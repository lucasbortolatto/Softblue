
public class Matematica {
	Double angulo;
	TipoAngulo tipo;
	
	Double converterAngulo(Double angulo, TipoAngulo tipo){
		this.angulo = angulo;
		this.tipo = tipo;
		if (tipo == tipo.GRAUS){
			System.out.println("Escolhido: Conversão de " + tipo.GRAUS + " em " + tipo.RADIANOS);
			angulo = Math.toRadians(angulo);
		}else{
			System.out.println("Escolhido: Conversão de " + tipo.RADIANOS + " em " + tipo.GRAUS);
			angulo = Math.toDegrees(angulo);
		}		
		return angulo;
		
	}

}
