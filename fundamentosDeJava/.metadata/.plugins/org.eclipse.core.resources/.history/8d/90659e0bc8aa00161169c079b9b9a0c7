
public class AplicacaoOperacao {

	public static void main(String[] args) {
		Operacao operacao1 = Operacao.SOMA;
		Operacao operacao2 = Operacao.SUBTRACAO;
		Operacao operacao3 = Operacao.MULTIPLICACAO;
		Operacao operacao4 = Operacao.DIVISAO;
		double soma = operacao1.calcular(2, 4, 6, Operacao.SOMA);
		System.out.println("Resultado: " + soma);
		double subtracao = operacao2.calcular(2, 4, 6, Operacao.SUBTRACAO);
		System.out.println("Resultado: " + subtracao);
		double multiplicacao = operacao3.calcular(2, 4, 6, Operacao.MULTIPLICACAO);
		System.out.println("Resultado: " + multiplicacao);
		double divisao = operacao4.calcular(2, 4, 6, Operacao.DIVISAO);
		System.out.println("Resultado: " + divisao);
	}

}
